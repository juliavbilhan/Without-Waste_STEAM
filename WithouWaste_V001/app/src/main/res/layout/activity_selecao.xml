<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selecao">

    <ImageView
        android:id="@+id/fundoSelecao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ww_fundo" />

    <View
        android:id="@+id/painelSelecao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/verde_fundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoSelecao"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-45dp"
        android:layout_marginEnd="8dp"
        android:onClick="voltar"
        app:layout_constraintEnd_toEndOf="@+id/painelSelecao"
        app:layout_constraintStart_toStartOf="@+id/painelSelecao"
        app:layout_constraintTop_toTopOf="@+id/painelSelecao"
        app:srcCompat="@drawable/ww_titulo_sf" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@+id/painelSelecao"
        app:layout_constraintStart_toStartOf="@+id/painelSelecao"
        app:layout_constraintTop_toBottomOf="@+id/logoSelecao">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonFavoritos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:onClick="cafeDaaaaManha"
                android:text="Favoritos" />

            <View
                android:id="@+id/size1"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/buttonCafeDaManha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:onClick="cafeDaManha"
                android:text="Café da Manhã" />

            <View
                android:id="@+id/size2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/buttonAlmoço"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:onClick="almoco"
                android:text="Almoço" />

            <View
                android:id="@+id/size3"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/buttonJantar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:onClick="janta"
                android:text="Jantar" />

            <View
                android:id="@+id/size4"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/buttonReaproveitamento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:text="Reaproveitamento" />

            <View
                android:id="@+id/size5"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/buttonGraficos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:text="Gráficos" />

            <View
                android:id="@+id/size6"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/buttonConfiguracoes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/verde_claro"
                android:fontFamily="@font/baloo_bhai"
                android:text="Configurações" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/verde_claro"
        android:fontFamily="@font/baloo_bhai"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="@+id/painelSelecao"
        app:layout_constraintEnd_toEndOf="@+id/painelSelecao"
        app:layout_constraintStart_toStartOf="@+id/painelSelecao" />

</androidx.constraintlayout.widget.ConstraintLayout>