<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fundoMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.9"
        android:scaleX="1.6"
        android:scaleY="1.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ww_fundo" />

    <View
        android:id="@+id/painelMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/verde_fundo"
        app:layout_constraintBottom_toBottomOf="@+id/fundoMain"
        app:layout_constraintEnd_toEndOf="@+id/fundoMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-45dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/painelMain"
        app:layout_constraintStart_toStartOf="@+id/painelMain"
        app:layout_constraintTop_toTopOf="@+id/painelMain"
        app:srcCompat="@drawable/ww_titulo_sf" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/verde_claro"
        android:fontFamily="@font/baloo_bhai"
        android:onClick="entrar"
        android:text="Entrar"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/painelMain"
        app:layout_constraintEnd_toStartOf="@+id/sizeMain"
        app:layout_constraintStart_toStartOf="@+id/painelMain" />

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/verde_claro"
        android:fontFamily="@font/baloo_bhai"
        android:onClick="cadastrar"
        android:text="Cadastrar"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/painelMain"
        app:layout_constraintEnd_toEndOf="@+id/painelMain"
        app:layout_constraintStart_toEndOf="@+id/sizeMain" />

    <TextView
        android:id="@+id/textViewUsuario"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/baloo"
        android:text="Usuário:"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/painelMain"
        app:layout_constraintTop_toBottomOf="@+id/logoMain" />

    <EditText
        android:id="@+id/editTextUsuario"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/baloo_bhai"
        android:hint="Usuário"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/verde_claro"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewUsuario"
        app:layout_constraintEnd_toEndOf="@+id/painelMain"
        app:layout_constraintStart_toEndOf="@+id/textViewUsuario" />

    <TextView
        android:id="@+id/textViewSenha"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/baloo"
        android:text="Senha:"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/painelMain"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsuario" />

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/baloo_bhai"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/verde_claro"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewSenha"
        app:layout_constraintEnd_toEndOf="@+id/painelMain"
        app:layout_constraintStart_toEndOf="@+id/textViewSenha" />

    <View
        android:id="@+id/sizeMain"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/painelMain"
        app:layout_constraintEnd_toEndOf="@+id/painelMain"
        app:layout_constraintStart_toStartOf="@+id/painelMain" />

</androidx.constraintlayout.widget.ConstraintLayout>